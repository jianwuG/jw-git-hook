#!/usr/bin/env node
const { checkCommit, checkEmail, checkFileCase } = require('./check.js');
const testEmail = /100\.com$/ || /@qq\.com$/;
const path = require('path');

const commitCheck = async () => {
    await checkFileCase(path.resolve() + '/src');
    await checkCommit();
    await checkEmail(testEmail);
};

commitCheck();
